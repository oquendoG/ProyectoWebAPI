{
  "ConnectionStrings": {
    "conexion": "Server=localhost; User=root; Password=admin; Database=tiendaBd"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "../logs/webapi-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.ff zzz} {Level:u3}]{Username}{Message:lj}{NewLine}{Exception}]"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{TimeStamp:yyyy-MM-dd HH:mm:ss.ff zzz} {Level:u3} {Message:lj} {NewLine} {Exception}]"
        }
      }
    ]
  }
}
